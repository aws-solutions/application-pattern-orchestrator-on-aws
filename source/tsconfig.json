{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2019",
        "module": "commonjs",
        "lib": ["es2019", "dom"],
        "declaration": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "typeRoots": ["./node_modules/@types"]
    },
    "exclude": ["cdk.out", "dist", "blueprint-ui", "lambda", "blueprint-infrastructure"]
}
